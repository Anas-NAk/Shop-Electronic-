                border: 1px solid silver;
                padding-left: 15px;
                outline: none;
                font-size: 19px;
                transition: .4s;
            }

            .input-field label, span.show {
                position: absolute;
                top: 43.5%;
                transform: translateY(-50%);
            }

        span.cshow {
            position: static;
            top: 56%;
            transform: translateY(-50%);
        }

        .input-field label {
            left: 15px;
            pointer-events: none;
            color: grey;
            font-size: 18px;
            transition: .4s;
        }

