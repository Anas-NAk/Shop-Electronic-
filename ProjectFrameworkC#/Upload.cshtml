        insert.Parameters.AddWithValue("@Price", price);
        insert.Parameters.AddWithValue("@Category", category);
        insert.Parameters.AddWithValue("@Image", imagePath);

        con.Open();
        int count = insert.ExecuteNonQuery();
        con.Close();

